<div class="row">
  <div class="col-md-6">

<table class="table table-condensed">

	<% TODOS.each_with_index do |todo, i| %>
		
		<% if todo.important %>

				<% if todo.done %>
				<tr class="success">
					<td class="danger"><strike><%= todo.text %></strike></td>
					<td><a href='/reopen/<%= i %>' class="btn btn-primary btn-sm" role="button">Mark Active</a></td>
			    </tr>
				<% else %>
				<tr class="active">
					<td class="danger"><%= todo.text %></td>
					<td><a href='/done/<%= i %>' class="btn btn-primary btn-sm" role="button">Mark Complete</a></td>
				</tr>
				<% end %>
				

		<% else %>

			<% if todo.done %>
				<tr class="success">
					<td><strike><%= todo.text %></strike></td>
					<td><a href='/reopen/<%= i %>' class="btn btn-primary btn-sm" role="button">Mark Active</a></td>
			    </tr>
				<% else %>
				<tr class="active">
					<td><%= todo.text %></td>
					<td><a href='/done/<%= i %>' class="btn btn-primary btn-sm" role="button">Mark Complete</a></td>
				</tr>
			<% end %>
		<% end %>

	<% end %>
</div>
</div>

</table>

<form action ="/add" method="POST">
	<input type="text" name="todo" />
	<input type="checkbox" name="important" />
	<input type="submit" value="Add Todo" />
</form>